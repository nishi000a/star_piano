<div class="container">
  <h2 class="text-cen">投稿一覧</h2>

  <div class="text-right">
    <%= link_to new_teacher_post_path do %>
      <button type="button" class="btn btn-light btn-lg rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
    <% end %>
  </div><br>

  <table class="table table-hover">
    <thead>
      <tr style="background-color: #EEEEEE;">
        <th>ID</th>
        <th>名前</th>
        <th>説明</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link_to teacher_post_path(post.id) do %><%= post.name %><% end %></td>
        <td><%= post.introduction %></td>
        <td>
          <% if post.is_active? %>
              <span class="text-success">募集中</span>
          <% else %>
             <span class="text-secondary">募集停止中</span>
          <% end %>
        </td>
      <% end %>
    </tbody>
  </table>

  <%= paginate @posts %>

</div>

