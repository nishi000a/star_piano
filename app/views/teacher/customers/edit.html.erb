<div class="container">

  <div class="row mb-3">
    <div class="col p-0 alert alert-warning p-0 border-0">
      <% if @teacher.errors.any? %>
        <%= @teacher.errors.size %>件のエラーが発生しました
        <ul>
          <% @teacher.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <h4>会員情報編集</h4>
    </div>
  </div>

  <%= form_with model: @teacher, url: teacher_customers_path do |f| %>
    <div class="row mb-3">
      <%= f.label :氏名, class:"col-md-2 offset-md-1" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class:"col-md-2 form-control"%>&emsp;
      <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class:"col-md-2 form-control" %>
    </div>

    <div class="row mb-3">
      <%= f.label :フリガナ, class:"col-md-2 offset-md-1" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email", class:"col-md-2 form-control" %>&emsp;
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email", class:"col-md-2 form-control" %>
    </div>

    <div class="row mb-3">
      <%= f.label :郵便番号, class:"col-md-2 offset-md-1" %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "email", class:"col-md-2 form-control" %>
    </div>

    <div class="row mb-3">
      <%= f.label :住所, class:"col-md-2 offset-md-1" %>
      <%= f.text_field :address, autofocus: true, autocomplete: "email", class:"col-md-2 form-control" %>
    </div>

    <div class="row mb-3">
      <%= f.label :電話番号, class:"col-md-2 offset-md-1" %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email", class:"col-md-2 form-control" %>
    </div>

    <div class="row mb-5">
      <%= f.label :メールアドレス, class:"col-md-2 offset-md-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-2 form-control" %>
    </div>


    <div class="row mb-3">
      <%= f.submit "編集内容を保存", class:"col-md-2 offset-md-2 btn btn-primary" %>
      <%= link_to "退会する", teacher_customers_withdraw_path, class: "col-md-2 offset-md-1 btn btn-danger" %>
  <% end %>
    </div>
</div>