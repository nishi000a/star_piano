<div class="container">
  <h2 class="text-center">投稿一覧(全<%= @counts %>件)</h2>

<!--検索-->
  <div class="text-right mt-5">
    <%= form_with model: @post_searches,  url: student_search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>&emsp;
      <%= f.submit "検索", class: "btn btn-info" %>
    <% end %>
  </div>

  <div class="row mt-5">
    <table class="table table-hover">
      <thead>
        <tr style="background-color: #EEEEEE;">
          <th>氏名</th>
          <th>説明文</th>
          <th>詳細情報</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <th><%= post.name %>&ensp;先生</th>
            <th><%= post.introduction %></th>
            <th><%= link_to "詳細情報へ", student_post_path(post.id), class: "btn btn-info" %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div><%= paginate @posts %></div>

</div>