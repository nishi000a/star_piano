<div class="container">
  <h2 class="text-center">新着投稿一覧</h2><br>
  <p style="text-align:center">ようこそSTAR PIANOへ！</p>

  <div class="row">
      <% @posts.each do |post| %>
        <div class="box text-center">
　　　　　　<p>
　　　　　　　  <%= link_to student_post_path(post.id) do %>
              <% if post.profile_image.attached? %>
                  <%= image_tag post.profile_image, size: "200x200" %>
              <% else %>
                  <%= image_tag 'no_image', size: "200x200" %>
              <% end %>
            <% end %>
　　　　　</p>
          <p><%= post.name %></p>
          <p><%= post.introduction %></p>
        </div>
      <% end %>
  </div>

        <div class="col-xs-2", style="text-align:center"><p><%= link_to "全ての投稿を見る＞", student_posts_path %></p></div><br>
    </div>
</div>
