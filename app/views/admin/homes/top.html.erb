<div class="container mt-2">
  <h2 class= "text-center">投稿一覧</h2>

  <table class="table table-hover">
    <thead>
      <tr style="background-color: #EEEEEE;">
        <th>ID</th>
        <th>名前</th>
        <th>説明</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.name %></td>
        <td><%= post.introduction %></td>
        <td>
          <% if post.is_active? %>
              <span class="text-success">募集中</span>
          <% else %>
             <span class="text-secondary">募集停止中</span>
          <% end %>
        </td>

      <% end %>
    </tbody>
  </table>

  <%= paginate @posts %>

</div>





</div>