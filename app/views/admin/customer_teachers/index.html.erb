<div class="container">
  <h2 class="text-center mb-5">会員一覧(先生側)</h2>


  <div class="col-xs-10">
    <table class="table table-hover">
      <thead>
        <tr style="background-color: #EEEEEE;">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @teachers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_teacher_path(customer) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted? %>
                <span class="text-secondary">退会済</span>
              <% else %>
               <span class="text-success">有効</span>
              <% end %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @teachers %>

  </div>
</div>
