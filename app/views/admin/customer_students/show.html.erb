<div class="container text-center">
  <h2><%= @student.last_name %><%= @student.first_name %>さんの会員詳細</h2><br>

  <table class="table">
	  <tr>
      <th>顧客ID</th>
      <td><%= @student.id %>
      <% if @student.is_deleted == "有効" %>
          <div class="label label-primary">有効会員</div>
      <% else %>
          <div class="label label-danger">退会済み</div>
      <% end %>
      </td>
    </tr>
    
    <tr>
      <th>氏名</th>
      <td><%= @student.last_name %><%= @student.first_name %></td>
    </tr>
    
    <tr>
      <th>フリガナ</th>
      <td><%= @student.last_name_kana %><%= @student.first_name_kana %></td>
    </tr>
    
    <tr>
      <th>郵便番号</th>
      <td><%= @student.postal_code %></td>
    </tr>
    
    <tr>
      <th>住所</th>
      <td><%= @student.address %></td>
    </tr>
    
    <tr>
      <th>電話番号</th>
      <td><%= @student.telephone_number %></td>
    </tr>
    
    <tr>
      <th>メールアドレス</th>
      <td><%= @student.email %></td>
    </tr>
  </table>
  
    <%= link_to "編集する", edit_admin_customer_student_path(@student), class:"btn btn-primary" %>
</div>